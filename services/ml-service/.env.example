# Server
ENVIRONMENT=development
PORT=8000
DEBUG=true

# API Keys
API_KEY=your-secret-api-key

# MongoDB (for storing predictions)
MONGODB_URI=mongodb://localhost:27017/mediconnect_ml

# PostgreSQL (read-only access to other services)
PATIENT_DB_URI=postgresql://user:password@localhost:5432/mediconnect_patients
VITALS_DB_URI=postgresql://user:password@localhost:5432/mediconnect_vitals

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=ml-service

# External Services
AUTH_SERVICE_URL=http://localhost:3001
PATIENT_SERVICE_URL=http://localhost:3002
VITALS_SERVICE_URL=http://localhost:3003

# Model Configuration
MODEL_PATH=/app/models
RETRAIN_INTERVAL_HOURS=24
MIN_TRAINING_SAMPLES=1000

# Risk Prediction Thresholds
RISK_LOW_THRESHOLD=0.3
RISK_MEDIUM_THRESHOLD=0.6
RISK_HIGH_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ml-service.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
