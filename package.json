{
  "name": "mediconnect-pro",
  "version": "1.0.0",
  "description": "Enterprise-grade telemedicine platform with AI-powered risk prediction and remote patient monitoring",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=services/api-gateway\" \"npm run dev --workspace=services/auth-service\" \"npm run dev --workspace=frontend/web\"",
    "dev:gateway": "npm run dev --workspace=services/api-gateway",
    "dev:auth": "npm run dev --workspace=services/auth-service",
    "dev:patient": "npm run dev --workspace=services/patient-service",
    "dev:vitals": "npm run dev --workspace=services/vitals-service",
    "dev:consultation": "npm run dev --workspace=services/consultation-service",
    "dev:ml": "npm run dev --workspace=services/ml-service",
    "dev:web": "npm run dev --workspace=frontend/web",
    "build": "npm run build --workspaces",
    "build:gateway": "npm run build --workspace=services/api-gateway",
    "build:services": "npm run build --workspaces --workspace=services/*",
    "build:frontend": "npm run build --workspaces --workspace=frontend/*",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/",
    "migrations:run": "npm run migration:run --workspace=services/auth-service",
    "migrations:revert": "npm run migration:revert --workspace=services/auth-service",
    "seed": "npm run seed --workspaces",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mediconnect-pro.git"
  },
  "keywords": [
    "telemedicine",
    "healthcare",
    "iot",
    "machine-learning",
    "microservices",
    "enterprise",
    "real-time",
    "monitoring",
    "nestjs",
    "nextjs",
    "typescript",
    "fastapi"
  ],
  "author": "Federico <your-email@example.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
