# MediConnect Pro - Environment Variables Template
# Copy this file to .env.production and fill in the required values
# WARNING: Never commit .env.production to git!

# ========================================
# CORE CONFIGURATION (REQUIRED)
# ========================================

# Environment: development, staging, production
NODE_ENV=production

# Server port (Render uses PORT=10000)
PORT=3000

# ========================================
# SECURITY (CRITICAL - REQUIRED)
# ========================================

# Session secret for cookie encryption
# REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Use PostgreSQL (true) or JSON file storage (false)
# Recommendation: false for <1000 users, true for enterprise
USE_POSTGRES=false

# PostgreSQL connection string (required if USE_POSTGRES=true)
# Format: postgres://username:password@host:5432/database_name
# DATABASE_URL=postgres://user:pass@host:5432/mediconnect

# ========================================
# MONITORING & ERROR TRACKING (OPTIONAL)
# ========================================

# Sentry DSN for error tracking and performance monitoring
# Sign up at https://sentry.io to get your DSN
# SENTRY_DSN=https://your_key@o123456.ingest.sentry.io/1234567

# ========================================
# AI SERVICES (OPTIONAL)
# ========================================

# OpenAI API key for transcription and medical note generation
# Get key from: https://platform.openai.com/api-keys
# Features: Audio transcription, medical notes, reports
# OPENAI_API_KEY=sk-...

# Anthropic Claude API key for triage assessment
# Get key from: https://console.anthropic.com/
# Features: Symptom triage, differential diagnosis
# ANTHROPIC_API_KEY=sk-ant-...

# ========================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ========================================

# Insurance Verification APIs
# INSURANCE_API_KEY=...
# INSURANCE_API_SECRET=...

# Pharmacy Integration APIs
# PHARMACY_API_KEY=...
# PHARMACY_API_SECRET=...

# ========================================
# NOTIFICATION SERVICES (OPTIONAL)
# ========================================

# SendGrid for email notifications
# Sign up at https://sendgrid.com
# SENDGRID_API_KEY=SG...
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Twilio for SMS notifications
# Sign up at https://www.twilio.com
# TWILIO_ACCOUNT_SID=AC...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# CACHING & SESSION STORAGE (OPTIONAL)
# ========================================

# Redis for session persistence and caching
# Recommendation: Use Redis in production for session persistence
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=...
# Or use connection URL:
# REDIS_URL=redis://username:password@host:6379

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable AI features
ENABLE_AI_FEATURES=true

# Enable/disable video consultations (UI only, not functional)
ENABLE_VIDEO_CONSULTATIONS=false

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log level: error, warn, info, http, debug
# Recommendation: info for production, debug for development
LOG_LEVEL=info

# ========================================
# DEPLOYMENT NOTES
# ========================================

# For Render.com deployment:
# 1. Add these variables in the Render dashboard
# 2. Use "generateValue: true" for SESSION_SECRET in render.yaml
# 3. Set SENTRY_DSN if you want error tracking
# 4. Set DATABASE_URL if using PostgreSQL database addon

# For Docker deployment:
# 1. Create .env.production file with these variables
# 2. Mount it as volume: -v $(pwd)/.env.production:/app/.env.production
# 3. Or use Docker secrets for sensitive values

# For Kubernetes deployment:
# 1. Create ConfigMap for non-sensitive values
# 2. Create Secrets for sensitive values (SESSION_SECRET, API keys, etc.)
# 3. Reference them in your deployment manifest
