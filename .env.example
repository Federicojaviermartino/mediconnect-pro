# ==============================================
# MediConnect Pro - Environment Configuration
# ==============================================

# Node Environment
NODE_ENV=development

# ==============================================
# Database Configuration
# ==============================================

# PostgreSQL (Auth, Patients, Consultations)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB_AUTH=mediconnect_auth
POSTGRES_DB_PATIENTS=mediconnect_patients
POSTGRES_DB_CONSULTATIONS=mediconnect_consultations

# MongoDB (Vitals, ML Predictions)
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=mongo123
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_VITALS=mediconnect_vitals

# Redis (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# TimescaleDB (Time Series Data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=timescale
TIMESCALE_PASSWORD=timescale123
TIMESCALE_DB=mediconnect_timeseries

# ==============================================
# JWT Configuration
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# ==============================================
# Message Broker Configuration
# ==============================================

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=mediconnect
KAFKA_GROUP_ID=mediconnect-group

# MQTT (IoT Devices)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=mediconnect
MQTT_PASSWORD=mqtt123

# ==============================================
# Service URLs (Internal)
# ==============================================
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
PATIENT_SERVICE_URL=http://localhost:3002
VITALS_SERVICE_URL=http://localhost:3003
CONSULTATION_SERVICE_URL=http://localhost:3004
ML_SERVICE_URL=http://localhost:8000

# ==============================================
# Frontend URLs
# ==============================================
FRONTEND_URL=http://localhost:3100
CORS_ORIGINS=http://localhost:3100,http://localhost:3000

# ==============================================
# Third-party Services (Optional)
# ==============================================

# Twilio (Video Consultations)
TWILIO_ACCOUNT_SID=
TWILIO_API_KEY=
TWILIO_API_SECRET=
TWILIO_AUTH_TOKEN=

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@mediconnect.com

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=mediconnect-files

# Google Maps API (Geolocation)
GOOGLE_MAPS_API_KEY=

# Stripe (Payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ==============================================
# Monitoring & Analytics (Optional)
# ==============================================

# DataDog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Sentry (Error Tracking)
SENTRY_DSN=

# ==============================================
# Security & Rate Limiting
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=10

# ==============================================
# ML Service Configuration
# ==============================================
ML_MODEL_PATH=/app/models
ML_PREDICTION_THRESHOLD=0.75
